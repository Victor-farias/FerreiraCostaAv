@using FerreiraCostaAv.DTO
@model UserDTO

@{
    ViewData["Title"] = "Editar Usuário";
}

<h2>Editar Usuário</h2>

<form asp-action="SaveEditedUser">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Credential.Login">Login:</label>
        <input type="text" asp-for="Credential.Login" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Credential.Password">Senha:</label>
        <input type="password" asp-for="Credential.Password" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Número de Telefone:</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Cpf">CPF:</label>
        <input type="text" asp-for="Cpf" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="BirthDate">Data de Nascimento:</label>
        <input type="date" asp-for="BirthDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="MothersName">Nome da Mãe:</label>
        <input type="text" asp-for="MothersName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Status">Status:</label>
        <select asp-for="Status" class="form-control">
            <option value="Ativo">Ativo</option>
            <option value="Inativo">Inativo</option>
            <option value="Bloqueado">Bloqueado</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
